<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ScrollView
        android:id="@+id/svReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/btnStart">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/tvContent"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp" />
            <TextView
                android:id="@+id/tvShowAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看答案"
                android:textSize="26sp"
                android:background="@drawable/shape_btn"
                android:textColor="@color/tvWhite"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"/>
            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btnLevel0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvLevel0"
            android:background="@drawable/shape_btn"
            android:textColor="@color/tvWhite"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/btnLevel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvLevel1"
            android:background="@drawable/shape_btn"
            android:textColor="@color/tvWhite"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/btnLevel2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvLevel2"
            android:background="@drawable/shape_btn"
            android:textColor="@color/tvWhite"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <Button
            android:id="@+id/btnLevel3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvLevel3"
            android:background="@drawable/shape_btn"
            android:textColor="@color/tvWhite"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="复习完毕\n\n点击此处再复习一轮"
        android:textSize="26sp"
        android:background="@drawable/shape_btn"
        android:textColor="@color/tvWhite"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>